@page "/videoplayer"
@inject IJSRuntime js

<h3>VideoPlayer</h3>
<button class="btn btn-primary" @onclick="StartBasicAgoraCall">Start Call</button>
@if (showLeaveCall)
{
    <button class="btn btn-primary" @onclick="LeaveCall">Leave Call</button>
}

<div class="container">
    <div class="row row-cols-2">
        <div class="col">Column</div>
        <div class="col">Column</div>
        <div class="col">Column</div>
        <div class="col">Column</div>
    </div>
</div>

<div id="mainVideoContainer" class="container">
    <div class="row row-cols-2">
    </div>
</div>

@code {

    bool showLeaveCall = false;

    private async Task StartBasicAgoraCall()
    {
        await js.StartBasicAgoraCall();
        showLeaveCall = true;
    }

    private async Task LeaveCall()
    {
        await js.LeaveCall();
        showLeaveCall = false;
    }

}
