@page "/people"
@inject IPersonRepository personRepository

<h3>Index People</h3>

<div class="form-group">
    <a class="btn btn-info" href="person/create">New Person</a>
</div>

<Pagination CurrentPage="@paginationDTO.Page"
            TotalAmountPages="totalAmountPages"
            SelectedPage="SelectedPage" />

<GenericList List="peopleList">
    <WholeListTemplate>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>

                    </th>
                    <th>
                        Name
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var person in peopleList)
                {
                    <tr>
                        <td>
                            <a class="btn btn-success" href="/person/edit/@person.Id">Edit</a>
                            <button class="btn btn-danger" @onclick="(() => DeletePerson(person.Id))">Delete</button>
                        </td>
                        <td>
                            <a href="/person/@person.Id/@person.Name.Replace(" ", "-")">@person.Name</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </WholeListTemplate>
</GenericList>

@code {

    List<Person> peopleList;
    PaginationDTO paginationDTO = new PaginationDTO() { RecordsPerPage = 1 };
    private int totalAmountPages;


    protected override async Task OnInitializedAsync()
    {
        try
        {
            await LoadPeople();
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
    }

    private async Task SelectedPage(int page)
    {
        paginationDTO.Page = page;
        await LoadPeople();
    }

    private async Task DeletePerson(int id)
    {
        await personRepository.DeletePerson(id);
        await LoadPeople();
    }

    private async Task LoadPeople()
    {
        var paginatedResponse = await personRepository.GetPeople(paginationDTO);
        peopleList = paginatedResponse.Response;
        totalAmountPages = paginatedResponse.TotalAmountPages;
    }

}
